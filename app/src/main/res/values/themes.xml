<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlexTagoCSFair" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#606C38</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#BC6C25</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/days_one</item>
        <item name="android:textColorPrimary">#FEFAE0</item>
        <item name="android:textColorSecondary">#FEFAE0</item>
        <item name="actionMenuTextColor">#FEFAE0</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/barlow</item>
    </style>
</resources>